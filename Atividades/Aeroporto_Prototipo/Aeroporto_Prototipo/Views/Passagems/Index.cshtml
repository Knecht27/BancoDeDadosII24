@model IEnumerable<Aeroporto_Prototipo.Models.Passagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroPassagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AeroportoDecolagemNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AeroportoPousoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientePassagemNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoltronaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VooNumNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroPassagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AeroportoDecolagemNavigation.IdAeroporto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AeroportoPousoNavigation.IdAeroporto)
            </td>
