                @Html.DisplayFor(modelItem => item.ClientePassagemNavigation.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoltronaNavigation.IdPoltrona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VooNumNavigation.IdVoo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPassagem">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPassagem">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPassagem">Delete</a>
